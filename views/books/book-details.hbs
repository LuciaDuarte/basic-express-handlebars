<h1>
  {{book.title}}
</h1>
<hr />
<p>
  Written by:
  {{book.author.name}}
</p>
<p>
  Summary:
  {{book.description}}
</p>
<p>
  Rating:
  {{book.rating}}
</p>
<hr />
<p>
  Add a review
</p>
<form action="/reviews/{{book.id}}/add" method="POST">
  <label>
    User
    <input type="text" name="user" />
  </label>
  <label>
    Comment
    <textarea name="comment"></textarea>
  </label>
  <button type="submit">
    Add Review
  </button>
</form>
{{#each book.reviews}}
  <div>
    <p>{{comment}} - {{user}}</p>
    <form action="/books/{{../book.id}}/reviews/{{id}}/delete" method="POST">
      <button onclick="delete()">Delete</button>
    </form>
  </div>
{{/each}}
<a href="/books">
  Back
</a>